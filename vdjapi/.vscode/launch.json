    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Django",
            "type": "python",
            "request": "launch",
            "env": {
                "DJANGO_SETTINGS_MODULE": "vdjapi.settings.dev"
            },
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "runserver",
                "0.0.0.0:8090"
            ],
            "subProcess": true,
            "django": true,
            "justMyCode": false
        },
        {
            "name": "Django migrate",
            "type": "python",
            "request": "launch",
            "env": {
                "DJANGO_SETTINGS_MODULE": "vdjapi.settings.dev"
            },
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "migrate"
            ],
            "subProcess": true,
            "django": true,
            "justMyCode": false
        }
    ]
}